// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

// add a way of tracking years to not duplicate

model name {
  id         String       @id @default(uuid())
  cursorId   Int          @unique @default(autoincrement())
  name       String
  sex        sex
  popularity popularity[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt


  @@unique(fields: [name, sex], name: "nameId")
}

model popularity {
  id         Int    @id @default(autoincrement())
  year       Int
  rank       Int
  popularity Int
  name       name   @relation(fields: [nameId], references: [id])
  nameId     String
}

// track the years inserted into DB so that there aren't any dupes
model namesYear {
  id   Int @id @default(autoincrement())
  year Int @unique
}

model user {
  id                       String   @id @default(uuid())
  email                    String   @unique
  firstName                String?
  lastName                 String?
  role                     role     @default(USER)
  profile                  profile?
  acceptTermsAndConditions Boolean  @default(false)
  active                   Boolean  @default(true)
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  authentication authentication[]
}

model authentication {
  id       String @id @default(uuid())
  password String
  user     user   @relation(fields: [userId], references: [id])
  userId   String
}

model profile {
  id      String    @id @default(uuid())
  bio     String?
  babyDOB DateTime?
  user    user      @relation(fields: [userId], references: [id])
  userId  String
}

enum sex {
  M
  F
}

enum role {
  ADMIN
  CREATOR
  USER
}
